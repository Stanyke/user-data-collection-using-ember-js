{{page-title 'User'}}
  <div class="container has-text-centered">
    <div class="column is-3 is-offset-4">

      <LinkTo @route="users">
        <button class="button mb-2" type="button">
          Back to users
        </button>
      </LinkTo>

      <div class="user-profile">

        <figure class="avatar">
          <img src={{@model.image}} width="256px" alt="User" />
        </figure>

        <p class="title has-text-white my-2">
          {{@model.name}}
        </p>

        <p class="subtitle has-text-white my-2">
          Example Value:
          {{@model.value}}
        </p>

        {{!-- Place the component to archive/unarchive users here --}}

        <div class="user-status">
          <div>Archive Status:</div>
          
          {{#if (or @model.is-archived archiveButtonClicked)}}
            <div class="badge">
              Archived
            </div>
          {{else}}
            <div>
              <button class="badge" type="button" onclick={{action 'archiveUser' @model.id}}>Click to archive</button>
            </div>
          {{/if}}
        </div>
        
      </div>
    </div>
  </div>
{{outlet}}
